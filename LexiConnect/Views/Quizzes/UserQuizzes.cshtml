@model IEnumerable<BusinessObjects.Quiz>
@{
    ViewData["Title"] = "My Generated Quizzes";
}

<link rel="stylesheet" href="~/css/Quizzes/UserQuizzes.css" />

<div class="container mt-4 mb-5">
    <!-- Page Header -->
    <div class="d-flex flex-wrap gap-3 justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-gradient mb-1">
                <svg viewBox="0 0 24 24" width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill="#000000"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <g fill="#494c4e" fill-rule="evenodd"> <path d="M13 0H3a3.009 3.009 0 0 0-3 3v13.99a3.009 3.009 0 0 0 3 3h10a3.009 3.009 0 0 0 3-3V3a3.009 3.009 0 0 0-3-3zm1 16.99a1.016 1.016 0 0 1-1 1H3a1.016 1.016 0 0 1-1-1V3a1.016 1.016 0 0 1 1-1h10c.549.009.991.451 1 1v13.99z"></path> <path d="M20 7v14a3.009 3.009 0 0 1-3 3H5a1 1 0 0 1 0-2h12a1.016 1.016 0 0 0 1-1V7a1 1 0 0 1 2 0z"></path> <circle cx="8" cy="15" r="1"></circle> <path d="M12 8a3.992 3.992 0 0 1-3 3.87V12a1 1 0 0 1-2 0v-1a1 1 0 0 1 1-1 2 2 0 1 0-2-2 1 1 0 1 1-2 0 4 4 0 1 1 8 0z"></path> </g> </g></svg>
                My Quizzes</h2>
            <p class="text-muted mb-0">Manage and review your created quizzes</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a href="@Url.Action("PublicQuizzes", "Quizzes")" class="btn btn-outline-secondary btn-lg shadow-sm">
                <i class="bi bi-people"></i> Browse Public Quizzes
            </a>
            <a href="/AIAssistant/Question" class="btn btn-gradient btn-lg shadow-sm">
                <i class="bi bi-sparkles"></i> Generate New Quiz
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Stats Cards -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon bg-primary-soft">
                        <i class="bi bi-collection"></i>
                    </div>
                    <div>
                        <div class="stat-value">@Model.Count()</div>
                        <div class="stat-label">Total Quizzes</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon bg-success-soft">
                        <i class="bi bi-globe"></i>
                    </div>
                    <div>
                        <div class="stat-value">@Model.Count(q => q.IsPublic)</div>
                        <div class="stat-label">Public</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon bg-warning-soft">
                        <i class="bi bi-lock"></i>
                    </div>
                    <div>
                        <div class="stat-value">@Model.Count(q => !q.IsPublic)</div>
                        <div class="stat-label">Private</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="stat-icon bg-info-soft">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <div>
                        <div class="stat-value">@Model.Count(q => q.CreatedAt >= DateTime.UtcNow.AddDays(-7))</div>
                        <div class="stat-label">This Week</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quiz Grid -->
        <div class="row g-4">
            @foreach (var quiz in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="quiz-card">
                        <div class="quiz-card-header">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="quiz-badges">
                                    @if (quiz.Difficulty == "Easy")
                                    {
                                        <span class="badge-custom badge-success">
                                            <i class="bi bi-star"></i> Easy
                                        </span>
                                    }
                                    else if (quiz.Difficulty == "Medium")
                                    {
                                        <span class="badge-custom badge-warning">
                                            <i class="bi bi-star-fill"></i> Medium
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge-custom badge-danger">
                                            <i class="bi bi-fire"></i> Hard
                                        </span>
                                    }
                                </div>
                                @if (quiz.IsPublic)
                                {
                                    <span class="badge-custom badge-primary">
                                        <i class="bi bi-globe"></i> Public
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-custom badge-secondary">
                                        <i class="bi bi-lock"></i> Private
                                    </span>
                                }
                            </div>
                            <h5 class="quiz-title">@quiz.Title</h5>
                            <p class="quiz-description">@(string.IsNullOrEmpty(quiz.Description) ? "No description provided" : quiz.Description)</p>
                        </div>
                        <div class="quiz-card-body">
                            <div class="quiz-meta">
                                <div class="meta-item">
                                    <i class="bi bi-book"></i>
                                    <span>@quiz.Subject</span>
                                </div>
                                <div class="meta-item">
                                    <i class="bi bi-calendar3"></i>
                                    <span>@quiz.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                        </div>
                        <div class="quiz-card-footer">
                            <a href="@Url.Action("TakeQuiz", "Quizzes", new { id = quiz.QuizId })"
                               class="btn btn-quiz-action">
                                <i class="bi bi-play-circle-fill"></i> Take Quiz
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h4 class="empty-state-title">No Quizzes Yet</h4>
            <p class="empty-state-text">Start creating engaging quizzes with AI assistance!</p>
            <a href="/AIAssistant/Question" class="btn btn-gradient btn-lg mt-3">
                <i class="bi bi-sparkles"></i> Create Your First Quiz
            </a>
        </div>
    }
</div>
