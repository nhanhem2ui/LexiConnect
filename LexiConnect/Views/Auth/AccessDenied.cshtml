@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/Auth/AccessDenied.css" />

<section class="access-denied-section">
    <div class="access-denied-content">
        <div class="lock-icon">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2C9.79086 2 8 3.79086 8 6V8H6C4.89543 8 4 8.89543 4 10V20C4 21.1046 4.89543 22 6 22H18C19.1046 22 20 21.1046 20 20V10C20 8.89543 19.1046 8 18 8H16V6C16 3.79086 14.2091 2 12 2Z" stroke="#ef4444" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                <path d="M10 6C10 4.89543 10.8954 4 12 4C13.1046 4 14 4.89543 14 6V8H10V6Z" fill="#ef4444" />
                <circle cx="12" cy="15" r="2" fill="#ef4444" />
                <path d="M12 17V19" stroke="#ef4444" stroke-width="2" stroke-linecap="round" />
            </svg>
        </div>

        <h1 class="access-denied-title">Access Denied</h1>
        <p class="access-denied-subtitle">You don't have permission to access this resource</p>

        <div class="error-details">
            <p>This page is restricted and requires specific authorization. If you believe you should have access, please contact your administrator.</p>
        </div>

        <div class="action-buttons">
            <a href="@Url.Action("Introduction", "Home")" class="btn-primary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 12H5M5 12L12 19M5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                Go to Home
            </a>

            @if (!User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Signin", "Auth")" class="btn-outline">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M15 3H19C20.1046 3 21 3.89543 21 5V19C21 20.1046 20.1046 21 19 21H15M10 17L15 12M15 12L10 7M15 12H3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Sign In
                </a>
            }
            else
            {
                <a href="javascript:history.back()" class="btn-outline">
                    Go Back
                </a>
            }
        </div>

        <div class="help-section">
            <p class="help-text">Need help?</p>
            <a href="@Url.Action("Contact", "Home")" class="help-link">Contact Support</a>
        </div>
    </div>
</section>